    {
      "id": "G1",
      "axe": "grammaire",
      "axeLabel": "Grammaire",
      "title": "Accord du verbe avec le sujet",
      "rule": "Le verbe s’accorde toujours avec son sujet, en personne et en nombre.",
      "examples": [
        "Les enfants jouent.",
        "L’oiseau chante.",
        "Tu manges une pomme."
      ],
      "kind": "fill-in",
      "items": [
        {
          "prompt": "Les élèves ___ dans la cour. (jouer)",
          "answer": "jouent"
        },
        {
          "prompt": "Je ___ du vélo. (faire)",
          "answer": "fais"
        },
        {
          "prompt": "Elle ___ son livre. (lire)",
          "answer": "lit"
        },
        {
          "prompt": "Nous ___ au parc. (aller)",
          "answer": "allons"
        }
      ]
    },
    {
      "id": "G2",
      "axe": "grammaire",
      "axeLabel": "Grammaire",
      "title": "Les formes de phrases : affirmative / négative",
      "rule": "Une phrase peut être affirmative (on affirme) ou négative (on utilise 'ne… pas', 'ne… jamais'...).",
      "examples": [
        "Il mange une pomme. (affirmative)",
        "Il ne mange pas de pomme. (négative)"
      ],
      "kind": "fill-in",
      "items": [
        {
          "prompt": "Transforme en négative : Elle chante une chanson → Elle ___ une chanson.",
          "answer": "ne chante pas"
        },
        {
          "prompt": "Transforme en affirmative : Il ne court pas. → Il ___ .",
          "answer": "court"
        },
        {
          "prompt": "Transforme en négative : Ils jouent au ballon → Ils ___ au ballon.",
          "answer": "ne jouent pas"
        }
      ]
    },
    {
      "id": "G3",
      "axe": "grammaire",
      "axeLabel": "Grammaire",
      "title": "La phrase interrogative",
      "rule": "On pose une question par l’intonation, avec 'est-ce que', ou par inversion du sujet et du verbe.",
      "examples": [
        "Tu viens ? — Est-ce que tu viens ? — Viens-tu ?"
      ],
      "kind": "fill-in",
      "items": [
        {
          "prompt": "Forme interrogative : Tu manges une pomme. → ___ ?",
          "answer": "Manges-tu une pomme"
        },
        {
          "prompt": "Avec 'est-ce que' : Vous aimez lire. → ___ ?",
          "answer": "Est-ce que vous aimez lire"
        },
        {
          "prompt": "Forme interrogative : Ils jouent au foot. → ___ ?",
          "answer": "Jouent-ils au foot"
        }
      ]
